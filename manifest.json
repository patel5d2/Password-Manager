{
    "manifest_version": 3,
    "name": "Secure Vault - Password Manager",
    "version": "2.0",
    "description": "A secure local password manager with a master password system.",
    "action": {
        "default_popup": "views/popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}